<div class="contents row">
  <%= form_tag("/tweets/#{@tweet.id}", method: :patch) do %>
    <h3>
      編集する
    </h3>
    <input placeholder="ImageUrl" type="text" name="image" value="<%= @tweet.image %>" autofocus="true">
    <textarea placeholder="text" name="text" cols="30" row="10"><%= @tweet.text %></textarea>
    <input type="submit" value="更新する">
  <% end %>
</div>